<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.illusivemen.smartwatchadministrator"
    android:versionCode="1"
    android:versionName="1.0" >
	
    <permission
        android:name="com.illusivemen.smartwatchadministrator.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.illusivemen.smartwatchadministrator.permission.MAPS_RECEIVE" />
    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
	
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 
    <!-- Required to show current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
    <!--  Required to Call SmartWatch -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    
    <!--  Required for Patient Checkin -->
    <uses-permission android:name="android.permission.SEND_SMS"/>
 
    <!-- Required OpenGL ES 2.0. for Maps V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    
    <!-- Unit Testing -->
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.illusivemen.smartwatchclient" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.illusivemen.maps.AdminGoogleMapping"
            android:label="@string/title_activity_admin_google_mapping"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".CallSmartWatch"
            android:label="@string/call_smartwatch" > 
        </activity>
         <activity
            android:name="com.illusivemen.checkin.PatientCheckIn" >
        </activity>
        <activity
            android:name="com.illusivemen.patientprofile.SelectPatientProfile" >
        </activity>
        <activity
            android:name="com.illusivemen.patientprofile.UpdatePatientProfile" >
        </activity>
        <!-- Google Maps -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCXqsOMKBrGIP8tdmlpM19c6cbSyEQ5SAM" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- Unit Testing -->
        <uses-library android:name="android.test.runner" />
        
        <activity
            android:name="com.illusivemen.reminder.CalendarReminder"
            android:label="@string/title_activity_calendar_reminder" >
        </activity>
        
        <!-- Background Service -->
        <service
            android:name="com.illusivemen.service.BackgroundServices"
            android:exported="false" />
    </application>

</manifest>
