<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000080" >

    <TextView
        android:id="@+id/text_view_patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp"
        android:text="@string/patientName"
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/text_view_patientAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/patientName"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp"
        android:text="@string/patientAge"
        android:textColor="#00FF00" />

    <EditText
        android:id="@+id/patientAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_view_patientAge"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFF00" />

    <TextView
        android:id="@+id/text_view_patientAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/patientAge"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp"
        android:text="@string/patientAddress"
        android:textColor="#00FF00" />

    <EditText
        android:id="@+id/patientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_view_patientName"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFF00" />

    <EditText
        android:id="@+id/patientAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_view_patientAdress"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:textColor="#FFFF00" />

    <requestFocus />

    <EditText
        android:id="@+id/medicalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_view_medicalInformation"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="#FFFF00" />

    <TextView
        android:id="@+id/text_view_medicalInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/patientAddress"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp"
        android:text="@string/medicalInformation"
        android:textColor="#00FF00" />

    <TextView
        android:id="@+id/text_view_emergencyContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/text_view_medicalInformation"
        android:layout_below="@+id/medicalInformation"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp"
        android:text="@string/emergencyContact"
        android:textColor="#00FF00" />

    <EditText
        android:id="@+id/emergencyContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_view_emergencyContact"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#FFFF00" />

    <Button
        android:id="@+id/saveButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="#800000"
        android:text="@string/saveButton"
        android:textColor="#FFFF00" />

</RelativeLayout><!-- From: file:/home/azarel/Documents/Agile-Software-Dev-Working-Directory/GitHub%20Repo/Dementia-Smart-Watch-Prototype/SmartwatchAdministrator/smartwatchAdministrator/src/main/res/layout/activity_update_patient_profile.xml -->