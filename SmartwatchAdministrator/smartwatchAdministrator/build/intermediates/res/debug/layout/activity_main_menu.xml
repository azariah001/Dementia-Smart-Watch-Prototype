<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000080"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.illusivemen.smartwatchadministrator.MainMenu" >

    <Button
        android:id="@+id/btnTrack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="#800000"
        android:onClick="showLocations"
        android:padding="10dp"
        android:text="@string/patient_tracking"
        android:textColor="#FFFF00" />

    <Button
        android:id="@+id/callSmartWatch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnTrack"
        android:layout_marginBottom="10dp"
        android:background="#800000"
        android:onClick="callSmartWatch"
        android:padding="10dp"
        android:text="Call SmartWatch"
        android:textColor="#FFFF00" />
    <!-- IM27 -->

    <Button
        android:id="@+id/sendNowButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/callSmartWatch"
        android:layout_below="@+id/callSmartWatch"
        android:layout_marginBottom="10dp"
        android:background="#800000"
        android:onClick="setReminder"
        android:padding="10dp"
        android:text="Add Reminder"
        android:textColor="#FFFF00" />

    <Button
        android:id="@+id/patientCheckIn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sendNowButton"
        android:layout_below="@+id/sendNowButton"
        android:layout_marginBottom="10dp"
        android:background="#800000"
        android:onClick="patientCheckIn"
        android:padding="10dp"
        android:text="Patient Check-In"
        android:textColor="#FFFF00" />

    <Button
        android:id="@+id/patientProfiles"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/patientCheckIn"
        android:layout_below="@+id/patientCheckIn"
        android:layout_marginBottom="10dp"
        android:background="#800000"
        android:onClick="selectPatientProfile"
        android:padding="10dp"
        android:text="@string/my_patients"
        android:textColor="#FFFF00" />

    <Button
        android:id="@+id/loginPrompt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/patientProfiles"
        android:layout_below="@+id/patientProfiles"
        android:layout_marginBottom="10dp"
        android:background="#800000"
        android:onClick="loginPrompt"
        android:padding="10dp"
        android:text="@string/login"
        android:textColor="#FFFF00" />

</RelativeLayout><!-- From: file:/home/azarel/Documents/Agile-Software-Dev-Working-Directory/GitHub%20Repo/Dementia-Smart-Watch-Prototype/SmartwatchAdministrator/smartwatchAdministrator/src/main/res/layout/activity_main_menu.xml -->