<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.illusivemen.smartwatchclient.MainMenu" >

    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_orange_dark"
        android:minWidth="150dip"
        android:onClick="showLocation"
        android:padding="10dp"
        android:text="@string/show_location" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMap"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_orange_dark"
        android:minWidth="150dip"
        android:onClick="showProfile"
        android:padding="10dp"
        android:text="@string/show_profile" />

    <TextClock
        android:id="@+id/textClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="TextClock"
        android:textColor="@android:color/white"
        android:textSize="60sp" />

    <Button
        android:id="@+id/btnBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnPanic"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_orange_dark"
        android:minWidth="150dip"
        android:onClick="showBattery"
        android:padding="10dp"
        android:text="@string/battery" />

    <Button
        android:id="@+id/btnPanic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/holo_green_light"
        android:onClick="panicSOS"
        android:text="@string/panic" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnMap"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_orange_dark"
        android:minWidth="150dip"
        android:onClick="showSettings"
        android:padding="10dp"
        android:text="Settings" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnSettings"
        android:background="@android:color/holo_orange_dark"
        android:minWidth="150dip"
        android:onClick="startMemoryGame"
        android:padding="10dp"
        android:text="@string/start_memory_game" />

    <Button
        android:id="@+id/btnReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnSettings"
        android:background="@android:color/holo_orange_dark"
        android:minWidth="150dip"
        android:onClick="setReminder"
        android:padding="10dp"
        android:text="Set Reminder" />

    <Button
        android:id="@+id/btnLogin"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnProfile"
        android:layout_alignLeft="@+id/btnProfile"
        android:background="@android:color/holo_orange_dark"
        android:minWidth="150dip"
        android:onClick="loginPrompt"
        android:padding="10dp"
        android:text="@string/login" />

</RelativeLayout>